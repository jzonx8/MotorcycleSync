<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Database.Search">

    <TextView
        android:id="@+id/MotorcycleSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00DCDCDC"
        android:fontFamily="@font/gupter_bold"
        android:text="MotorcycleSync"
        android:textColor="#7B3D26"
        android:textSize="48sp"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:hint="Category" />

    <AutoCompleteTextView
        android:id="@+id/textBrand"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:hint="Brand" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/minPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="Min Price"
        android:layout_gravity="center_horizontal" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/maxPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:hint="Max Price"
        android:layout_gravity="center_horizontal" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textYear"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:hint="Year"
        android:layout_gravity="center_horizontal" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textGearbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="16dp"
        android:hint="Gearbox"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:backgroundTint="@color/grey"
        android:onClick="Search"
        android:text="Search"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMotorcycles"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/loadMoreButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/grey"
        android:text="Load More" />
</LinearLayout>
