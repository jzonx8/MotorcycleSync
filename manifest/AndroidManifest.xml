<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:supportsRtl="true"
        android:theme="@style/Theme.NavigationDrawer"
        tools:targetApi="31">
        <activity
            android:name=".Database.SearchOutput"
            android:exported="false"
            android:label="@string/title_activity_search_output"
            android:theme="@style/Theme.NavigationDrawer.NoActionBar" />
        <activity
            android:name=".Database.Search"
            android:exported="true" />
        <activity
            android:name=".DrawerActivity"
            android:exported="true"
            android:label="@string/title_activity_drawer"
            android:theme="@style/Theme.FinalProject.NoActionBar" />
        <activity
            android:name=".Startup"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".SettingActivity"
            android:exported="true" />
        <activity
            android:name=".BookmarkActivity"
            android:exported="true" />
        <activity
            android:name=".MotorcycleFeedback"
            android:exported="true" />
        <activity
            android:name=".Database.Registration"
            android:exported="true" />
        <activity
            android:name=".HotPicksFragment"
            android:exported="true" />
        <activity
            android:name=".LatestFragment"
            android:exported="true" />
        <activity
            android:name=".BrandsFragment"
            android:exported="true" />
        <activity
            android:name=".Database.MotorcycleDetailsActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
